{
  "version": 2,
  "builds": [
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "api/index.py", "use": "@vercel/python" },
    { "src": "api/**", "use": "@vercel/static" },
    { "src": "*.js", "use": "@vercel/node" },
    { "src": "package.json", "use": "@vercel/next" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/(.*)", "dest": "/app/$1" }
  ]
}
